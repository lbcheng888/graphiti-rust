{
  "tools": [
    {
      "name": "add_memory",
      "description": "Add a memory to the knowledge graph with automatic entity extraction",
      "inputSchema": {
        "type": "object",
        "properties": {
          "content": {
            "type": "string",
            "description": "The text content to remember"
          },
          "name": {
            "type": "string",
            "description": "Optional name for this memory"
          },
          "source": {
            "type": "string",
            "description": "Source of the memory (e.g., 'conversation', 'code', 'documentation')"
          },
          "memory_type": {
            "type": "string",
            "enum": ["event", "note", "message", "document"],
            "description": "Type of memory"
          }
        },
        "required": ["content"]
      }
    },
    {
      "name": "search_memory",
      "description": "Search memories using semantic search and entity matching",
      "inputSchema": {
        "type": "object",
        "properties": {
          "query": {
            "type": "string",
            "description": "Search query"
          },
          "limit": {
            "type": "integer",
            "description": "Maximum number of results",
            "default": 10
          },
          "entity_types": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Filter by entity types (Person, Organization, Location)"
          }
        },
        "required": ["query"]
      }
    },
    {
      "name": "get_related_memories",
      "description": "Get memories related to a specific memory ID",
      "inputSchema": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Memory ID"
          },
          "depth": {
            "type": "integer",
            "description": "Depth of relationship traversal",
            "default": 1
          }
        },
        "required": ["id"]
      }
    }
  ]
}